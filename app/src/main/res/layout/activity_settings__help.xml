<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.weqar.weqar.Fragments.BotNav_SettingsFragment">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_homescreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorHintss"
                    android:textSize="23sp"/>
                <ImageView
                    android:id="@+id/set_account_help_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    />
                <ImageView
                    android:id="@+id/homescreen_notification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"

                    android:background="@drawable/home_toolbar_notification"

                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/colorHints"
        android:layout_below="@+id/appbar_homescreen"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:layout_gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="50dp"
                android:padding="9dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/WTV_set_faq"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="FAQ"
                    android:paddingLeft="20dp"
                    android:layout_weight="2.8"
                    android:textColor="@color/colorHint"
                    android:textSize="17sp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/WIV_set_faq"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_navigate_next_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1.85"
                    android:background="@color/colorWhite"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight=".3"
                    android:background="@color/colorHints"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="9dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/WTV_set_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                    android:text="Contact Us"
                    android:layout_weight="2.8"
                    android:paddingLeft="20dp"


                    android:textColor="@color/colorHint"
                    android:textSize="17sp"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/WIV_set_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_navigate_next_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1.85"
                    android:background="@color/colorWhite"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight=".3"
                    android:background="@color/colorHints"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="9dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/WTV_set_tc"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|start"
                        android:text="Terms and Privacy Policy"
                    android:layout_weight="2.8"
                    android:paddingLeft="20dp"


                    android:textColor="@color/colorHint"
                    android:textSize="17sp"
                    android:layout_gravity="center" />
                <ImageView
                    android:id="@+id/WIV_set_tc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_navigate_next_black_24dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
