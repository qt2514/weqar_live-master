<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.weqar.weqar.Fragments.BotNav_SettingsFragment_Guest">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_homescreen_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/colorHint"
                    android:textSize="23sp"/>

            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/appbar_homescreen_guest"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="450dp"
            android:background="@color/colorHints"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="40dp"
                android:padding="9dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/user_setting_profile"/>
                <TextView
                    android:id="@+id/WTV_set_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="Sign In/Sign Up"
                    android:layout_weight="2.4"
                    android:textColor="@color/colorHint"
                    android:textSize="17sp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/WIV_set_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_navigate_next_black_24dp"/>
            </LinearLayout>

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_gravity="bottom"
               android:gravity="bottom"
               android:layout_height="wrap_content"
               android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:layout_marginTop="40dp"
                android:padding="9dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight=".5"
                    android:src="@drawable/user_setting_help"/>
                <TextView
                    android:id="@+id/WTV_set_help"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text="Help"
                    android:layout_weight="2.4"
                    android:textColor="@color/colorHint"
                    android:textSize="17sp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/WIV_set_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_weight=".2"
                    android:src="@drawable/ic_navigate_next_black_24dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:weightSum="2"
                android:orientation="horizontal">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight="1.65"
                    android:background="@color/colorWhite"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_weight=".5"
                    android:background="@color/colorHints"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="9dp"
                android:weightSum="3"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:layout_weight=".6"
                    android:paddingLeft="2dp"
                    android:src="@drawable/user_setting_tellafriend"/>
                <TextView
                    android:id="@+id/share_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="start|center"
                    android:text=" Tell a Friend"
                    android:layout_weight="2.3"
                    android:textColor="@color/colorHint"
                    android:textSize="17sp"
                    android:layout_gravity="center"/>
                <ImageView
                    android:id="@+id/share_IV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_gravity="end"
                    android:layout_weight=".1"
                    android:src="@drawable/ic_navigate_next_black_24dp"/>
            </LinearLayout>


           </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
