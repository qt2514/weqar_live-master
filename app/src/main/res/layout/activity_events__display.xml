<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weqar.weqar.Events_Display_Vendor">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_events_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/events_u_addevent"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="11dp"
                    android:layout_toStartOf="@+id/homescreen_notification"
                    android:background="@drawable/ic_add_black_24dp" />

                <ImageView
                    android:id="@+id/events_u_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="65dp"
                    android:text="Events"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorHint"
                    android:textSize="22sp" />

                <!--<ImageView-->
                <!--android:id="@+id/event_addevent_vendor"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="30dp"-->

                <!--android:layout_alignParentTop="true"-->
                <!--android:layout_marginEnd="11dp"-->
                <!--android:layout_toStartOf="@+id/homescreen_notification"-->
                <!--android:background="@drawable/ic_add_black_24dp" />-->


                <ImageView
                    android:id="@+id/homescreen_notification"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignTop="@+id/homescreen_filter"
                    android:layout_marginEnd="7dp"
                    android:background="@drawable/home_toolbar_notification"
                    />
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <com.baoyz.swipemenulistview.SwipeMenuListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appbar_events_user"
        android:id="@+id/events_user_list"
        android:layout_marginTop="10dp"
        android:layout_marginRight="6dp"
        android:layout_marginLeft="6dp"
        android:divider="@android:color/transparent"

        />
</RelativeLayout>
