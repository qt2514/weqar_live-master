<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ce020202"
    tools:context="com.weqar.weqar.DiscountDetails_User">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ce020202"
        />

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:id="@+id/koo"
        android:layout_height="wrap_content"
        app:theme="@style/ToolbarStyle"
        android:background="#08000000"
        >

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            app:theme="@style/ToolbarStyle"

            android:layout_width="match_parent"
            android:layout_height="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="6dp"
                    android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
                    android:id="@+id/discount_details_back" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discount"
                    android:layout_marginLeft="70dp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp"
                    android:gravity="center"/>
               
            </RelativeLayout>
        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/discountdet_rv_user"
        android:layout_width="match_parent"
        android:layout_below="@+id/koo"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        />
    <!--<include layout="@layout/content_discount_details" />-->


</RelativeLayout>
