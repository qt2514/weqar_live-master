<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_marginLeft="5dp"
    xmlns:tools="http://schemas.android.com/tools">
    <android.support.v7.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="300dp"
        android:layout_height="450dp"
        card_view:contentPadding="4dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="12dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"

        android:background="#000"
        >
        <LinearLayout
            android:id="@+id/asthma_action_plan"
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:weightSum="3"
            android:orientation="vertical" >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="260dp"

                android:layout_weight="2.3">
                <ImageView
                    android:id="@+id/disc_det_image"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                 />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorBlacks"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/linearLayout">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/disc_det_logo"
                        android:layout_width="60dp"
                        android:layout_height="55dp"
                        android:layout_margin="8dp"
                        android:background="@drawable/rounded"
                        app:civ_border_width="2dp"
                        app:civ_border_color="@color/colorPrimary"
                        android:layout_weight=".0"
                        android:src="@drawable/rounded"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/disc_desc_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="75% Discount in KFC"
                            android:textColor="@color/colorWhite"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/disc_desc_titletwos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Percide January 7 2018 Dont miss it"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            />   <TextView
                            android:id="@+id/disc_desc_titletwo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="Percide January 7 2018 Dont miss it"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            />



                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_weight=".7">
                <TextView
                    android:id="@+id/disc_desc_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Percide January 7 2018 Dont miss it"
                    android:textColor="@color/colorHintss"
                    android:paddingStart="10dp"
                    android:textSize="12sp"
                    />
                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_below="@+id/disc_desc_percentage"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/disc_dec_det"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"

                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into elecLorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into elecalso the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum."/>


                </ScrollView>

            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/disc_det_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Apply"
                    android:layout_weight="1"
                    android:layout_margin="7dp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/but_selected"/>
                <Button
                    android:id="@+id/disc_det_follow"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Follow"
                    android:layout_margin="7dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/but_unselected"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>