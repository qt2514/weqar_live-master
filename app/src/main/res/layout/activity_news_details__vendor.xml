<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weqar.weqar.EventDetails_Vendor">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/eventdet_imagelayout"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/news_udet_image"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/rounded_two"
                    />
                <ImageView
                    android:id="@+id/news_udet_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentStart="true"
                    android:layout_margin="20dp"
                    android:backgroundTint="@color/colorWhite"
                    android:background="@drawable/ic_keyboard_arrow_left_black_24dp"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_below="@+id/eventdet_imagelayout"

                android:padding="20dp">
                <TextView
                    android:id="@+id/news_det_u_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="16sp"
            />
                <TextView
                    android:id="@+id/news_det_u_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                   /> <TextView
                    android:id="@+id/news_det_v_url"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                android:textColorLink="@color/colorBlack"
                    android:textSize="15sp"
                android:autoLink="web"

                android:layout_marginTop="5dp"
                   />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_margin="6dp"
                    android:background="@color/colorHintss"/>
                <TextView
                    android:id="@+id/news_det_u_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                   />
                <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="40dp"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:background="@drawable/but_unselected"-->
                    <!--android:text="Follow"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:textAllCaps="false"-->
                    <!--android:textColor="@color/colorWhite" />-->
            </LinearLayout>





        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
