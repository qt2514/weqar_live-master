                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Country"
                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/TV_vendor_profilecountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kuwait"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:paddingStart="10dp"
                android:paddingEnd="30dp"
                android:background="@color/colorPrimary">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Professional"
                    android:textSize="22sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"/>

                <TextView
                    android:id="@+id/T_set_prof_prof_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:text="Edit"
                    android:textColor="@color/colorWhite"
                    android:textSize="19sp" />
            </RelativeLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/CV_vendor_profileimage"
                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_gravity="center"
                android:src="@drawable/rounded"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Company Name"

                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/T_set_prof_user_companyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/T_set_prof_user_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Business Contact"
                    android:textColor="@color/colorHintss"
                    android:layout_marginTop="16dp"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/T_set_prof_user_bcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorHint"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="17sp"/>
            </LinearLayout>
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Email Id"
                android:textColor="@color/colorHintss"
                android:layout_marginTop="16dp"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/T_set_prof_user_bemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorHint"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="10dp"
                android:textSize="17sp"/>
        </LinearLayout>
