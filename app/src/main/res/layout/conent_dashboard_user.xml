<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/dfs"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="7dp"
            app:cardElevation="2dp"
            android:layout_margin="5dp"
            app:cardPreventCornerOverlap="false"
            android:layout_gravity="center"
            android:layout_height="170dp" >
            <RelativeLayout
                android:id="@+id/relative_discountone"
                android:layout_width="wrap_content"
                android:layout_height="170dp">
                <ImageView
                    android:id="@+id/image_event_user"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/rounded_two"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />

                <ImageView
                    android:id="@+id/image_two_event_user"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@drawable/vgv"
                    android:clickable="false"
                    android:layout_alignParentStart="true"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/logo_event_user"
                    android:layout_width="60dp"
                    android:layout_height="60dp"

                    android:layout_alignParentStart="true"

                    android:layout_alignParentTop="true"
                    android:layout_marginStart="31dp"
                    android:layout_marginTop="19dp"
                    android:background="@drawable/rounded"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:src="@drawable/rounded"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:id="@+id/event_discount_layout"
        android:layout_below="@+id/logo_event_user">
            <TextView
                android:id="@+id/TV_event_texttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:layout_marginTop="10dp"

                android:maxLength="20"
                android:text="75% Discount in KFC"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                />
            <TextView
                android:id="@+id/TV_disc_textstartdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/colorWhite"
                android:textSize="11sp"
                android:maxLength="27"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>
        <TextView
            android:id="@+id/TV_disc_textenddate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/colorWhite"
            android:textSize="11sp"
            android:maxLength="27"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"/>


    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"


                    android:id="@+id/event_event_layout"
                    android:background="#b9000000"
                    android:layout_below="@+id/logo_event_user">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:layout_marginTop="5dp"
                        android:id="@+id/TV_event_etitle"
                        android:maxLength="20"
                        android:text="75% Discount in KFC"
                        android:textColor="@color/colorWhite"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/TV_event_edesc"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"

                        android:weightSum="2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:id="@+id/TV_event_start"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:layout_weight="1"
                        android:id="@+id/TV_event_end"
                        android:textColor="@color/colorWhite"
                        android:textSize="11sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="end"
                    android:clickable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"

                    android:layout_marginTop="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_alignParentEnd="true"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button"
                        android:layout_width="60dp"
                        android:layout_height="25dp"
                        android:layout_above="@+id/textViewu"
                        android:layout_marginBottom="29dp"
                        android:layout_marginStart="29dp"
                        android:layout_toEndOf="@+id/IV_disc_image"
                        android:background="@drawable/but_selected"
                        android:visibility="invisible"
                        android:text="Unfollow"
                        android:textAllCaps="false"
                        android:textColor="@color/colorWhite"
                        android:textSize="12sp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/button"
                        android:layout_below="@+id/TV_disc_percentage"
                        android:visibility="invisible"

                        android:layout_marginTop="25dp"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:src="@drawable/ic_location_on_black_24dp" />


                </LinearLayout>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>

</RelativeLayout>